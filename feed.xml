---
layout: none
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.feed[jekyll.environment].title | xml_escape }}</title>
    <description>{{ site.feed[jekyll.environment].description | xml_escape }}</description>
    <link>{{ site.feed[jekyll.environment].url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit: site.feed[jekyll.environment].items %}
      <item>
        {% if post.subtitle %}
          {% assign short_title = post.title | append: " â†’ " | append: post.subtitle %}
        {% else %}
          {% assign short_title = post.title %}
        {% endif %}
        <title>{{ short_title | xml_escape }}</title>
        <description>{{ post.description | xml_escape }}</description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ site.feed[jekyll.environment].url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.feed[jekyll.environment].url }}{{ post.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
